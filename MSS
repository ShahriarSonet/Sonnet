    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const sections = document.querySelectorAll('.section-fade-in');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.1 });
            sections.forEach(section => {
                observer.observe(section);
            });

            const texasTrendsData = {
                temperature: {
                    labels: ['Far West Texas', 'Panhandle', 'East Texas'],
                    values: [3.68, 2.8, 2.5]
                },
                precipitation: {
                    labels: ['Central Texas', 'East Texas', 'South Texas'],
                    values: [-125.27, -90, -75]
                },
                humidity: {
                    labels: ['Far West Texas', 'Panhandle', 'Coastal Texas'],
                    values: [-2.33, -1.5, 1.71]
                }
            };

            const modelPerfData = {
                labels: ['Linear Regression', 'ARIMA', 'MLP', 'LSTM'],
                values: [0.249, 0.165, 0.0379, 0.0218]
            };

            const dhakaLulcData = {
                labels: ['Urban Area', 'Vegetation', 'Water Body'],
                data2009: [220.55, 416.10, 155.36],
                data2016: [258.74, 368.84, 127.04],
                data2023: [370.12, 345.90, 75.02]
            };
            
            const cycloneImpactData = {
                 labels: ['Agriculture', 'Settlements', 'Dense Vegetation'],
                 valuesBefore: [90.1, 24.9, 74.2],
                 valuesAfter: [85.3, 17.1, 69.7]
            };

            const chartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#475569' // slate-600
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: { color: '#475569' },
                        grid: { display: false }
                    },
                    y: {
                        ticks: { color: '#475569' },
                        grid: { color: '#e2e8f0' } // slate-200
                    }
                }
            };

            let texasTrendsChart, modelPerformanceChart, dhakaLULCChart, cycloneImpactChart;

            function createTexasTrendsChart(dataType = 'temperature') {
                const ctx = document.getElementById('texasTrendsChart').getContext('2d');
                if (texasTrendsChart) {
                    texasTrendsChart.destroy();
                }
                let title, bgColor;
                switch(dataType) {
                    case 'precipitation':
                        title = 'Total Precipitation Change (mm)';
                        bgColor = '#38b2ac'; // teal-500
                        break;
                    case 'humidity':
                        title = 'Specific Humidity Change (g/kg)';
                        bgColor = '#f59e0b'; // amber-500
                        break;
                    default:
                        title = 'Mean Temperature Change (¬∞C)';
                        bgColor = '#6366f1'; // indigo-500
                        break;
                }
                
                texasTrendsChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: texasTrendsData[dataType].labels,
                        datasets: [{
                            label: title,
                            data: texasTrendsData[dataType].values,
                            backgroundColor: bgColor,
                            borderRadius: 4,
                        }]
                    },
                    options: { ...chartOptions, scales: { ...chartOptions.scales, y: { ...chartOptions.scales.y, title: { display: true, text: title }}}}
                });
            }
            
            function createModelPerformanceChart() {
                const ctx = document.getElementById('modelPerformanceChart').getContext('2d');
                modelPerformanceChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: modelPerfData.labels,
                        datasets: [{
                            label: 'Model Mean Squared Error (MSE)',
                            data: modelPerfData.values,
                            backgroundColor: ['#f87171', '#fb923c', '#fbbf24', '#a3e635'],
                            borderRadius: 4,
                        }]
                    },
                    options: { ...chartOptions, scales: { ...chartOptions.scales, y: { ...chartOptions.scales.y, title: { display: true, text: 'Lower is better' }}}}
                });
            }
            
            function createDhakaLULCChart() {
                const ctx = document.getElementById('dhakaLULCChart').getContext('2d');
                dhakaLULCChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: dhakaLulcData.labels,
                        datasets: [
                            { label: '2009', data: dhakaLulcData.data2009, backgroundColor: '#a5b4fc', borderRadius: 4 },
                            { label: '2016', data: dhakaLulcData.data2016, backgroundColor: '#818cf8', borderRadius: 4 },
                            { label: '2023', data: dhakaLulcData.data2023, backgroundColor: '#4f46e5', borderRadius: 4 }
                        ]
                    },
                    options: { ...chartOptions, scales: { ...chartOptions.scales, y: { ...chartOptions.scales.y, title: { display: true, text: 'Area (km¬≤)' }}}}
                });
            }

            function createCycloneImpactChart() {
                 const ctx = document.getElementById('cycloneImpactChart').getContext('2d');
                 cycloneImpactChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: cycloneImpactData.labels,
                        datasets: [
                            {
                                label: 'Before Cyclone',
                                data: cycloneImpactData.valuesBefore,
                                backgroundColor: '#2dd4bf', // teal-400
                                borderRadius: 4
                            },
                            {
                                label: 'After Cyclone',
                                data: cycloneImpactData.valuesAfter,
                                backgroundColor: '#f43f5e', // rose-500
                                borderRadius: 4
                            }
                        ]
                    },
                     options: { ...chartOptions, scales: { ...chartOptions.scales, y: { ...chartOptions.scales.y, title: { display: true, text: 'Area (km¬≤)' }}}}
                 });
            }

            createTexasTrendsChart('temperature');
            createModelPerformanceChart();
            createDhakaLULCChart();
            createCycloneImpactChart();

            const buttons = [
                document.getElementById('btn-temp'),
                document.getElementById('btn-precip'),
                document.getElementById('btn-humid')
            ];

            buttons.forEach(button => {
                button.addEventListener('click', (e) => {
                    buttons.forEach(btn => {
                        btn.classList.remove('bg-indigo-500', 'text-white');
                        btn.classList.add('bg-slate-200', 'text-slate-700');
                    });
                    e.target.classList.add('bg-indigo-500', 'text-white');
                    e.target.classList.remove('bg-slate-200', 'text-slate-700');
                    const dataType = e.target.id.split('-')[1];
                    createTexasTrendsChart(dataType === 'precip' ? 'precipitation' : dataType);
                });
            });
        });
    </script>
</body>
</html>
